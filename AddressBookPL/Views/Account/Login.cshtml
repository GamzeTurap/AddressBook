@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-md-6 offset-3 offset-3">
        @if (TempData["RegisterSuccessMsg"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                @TempData["RegisterSuccessMsg"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["RegisterWarningMsg"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                @TempData["RegisterWarningMsg"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <h5>Giris Ekrani</h5>
          <form asp-controller="Account" asp-action="Login" mothod="post">
            <div class="text-danger" asp-validation-summary="All"> </div>
        <div class="form-group">
            <label>Kullanici Adi veya E-mail :</label>
            <input type="text" class="form-control" asp-for="UserNameorEmail" />
        </div>
        <div class="form-group">
            <label>Sifre :</label>
            <input type="text" class="form-control" asp-for="Password" />
        </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">GIRIS YAP</button>

            </div>

        </form>
    </div>
</div>
